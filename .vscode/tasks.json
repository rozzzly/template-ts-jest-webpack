{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "echoCommand": true,
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "command": "tsc",
            "options": {
                "shell": {
                    "executable": "C:\\Windows\\System32\\bash.exe",
                    "args": [
                        "--login",
                        "-c"
                    ]
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "type": "shell",
            "label": "debug jest",
            "command": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --no-cache",
            "options": {
                "shell": {
                    "executable": "C:\\Windows\\System32\\bash.exe",
                    "args": [
                        "--login",
                        "-c"
                    ]
                }
            },
            "problemMatcher": []
        }
    ]
}
